<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:gravity="center"
                android:inputType="phone"
                android:textStyle="bold"
                android:background="@drawable/edbox"
                android:textAlignment="center"
                android:hint="No. Ponsel Lama"
                android:id="@+id/edLama" />


            <EditText
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:gravity="center"
                android:inputType="phone"
                android:textStyle="bold"
                android:background="@drawable/edbox"
                android:textAlignment="center"
                android:hint="Ketikkan Lagi No. Ponsel Lama"
                android:id="@+id/edReLama" />



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:text="Ketikkan Kode Negara 62 \n diikuti nomor ponsel anda dari angka 8 \n  Contoh : Nomor Ponsel Anda 0823680008333 \n Ketikkan 6282368008333 "
            />







        <Button
            android:id="@+id/btnSubmit"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="Next"
            />

    </LinearLayout>


</ScrollView>
